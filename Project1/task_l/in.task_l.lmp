label Tloop

units           metal

atom_style      atomic
atom_modify     map array
boundary        p p p
atom_modify     sort 0 0.0

# temperature
variable myTemp index 1525.0 1550.0 1575.0 1600.0 1625.0 1650.0 1675.0 1700.0 1725.0 1750.0 1775.0 1800.0# 1900.0 2000.0


# diamond unit cell
variable myL equal 4
variable myscale equal 1

variable a equal 5.431*${myscale}
lattice         custom $a               &
                a1 1.0 0.0 0.0          &
                a2 0.0 1.0 0.0          &
                a3 0.0 0.0 1.0          &
                basis 0.0 0.0 0.0       &
                basis 0.0 0.5 0.5       &
                basis 0.5 0.0 0.5       &
                basis 0.5 0.5 0.0       &
                basis 0.25 0.25 0.25    &
                basis 0.25 0.75 0.75    &
                basis 0.75 0.25 0.75    &
                basis 0.75 0.75 0.25

region          myreg block     0 ${myL} &
                                0 ${myL} &
                                0 ${myL}

create_box      1 myreg
create_atoms    1 region myreg

mass            1       28.06

group Si type 1

velocity all create ${myTemp} 5287286 mom yes rot yes dist gaussian

pair_style      sw
pair_coeff * * Si.sw Si

neighbor        1.0 bin
neigh_modify    every 1 delay 10 check yes

timestep        1.0e-3
fix             1 all nve#t temp ${myTemp} ${myTemp} $(100*1.0e-3)
# fix             2 all langevin ${myTemp} ${myTemp} 0.1 48278
fix             2 all temp/berendsen ${myTemp} ${myTemp} 1

compute myMSD all msd

# Run simulation
thermo          10
thermo_style custom step temp c_myMSD[4] time

dump 1 all custom 10 dump.Si_test_temp id type x y z vx vy vz
run             10000


clear
next myTemp
jump SELF Tloop
