# 3d liquid lennard Jones
variable    dt equal 0.005
variable    T equal 1.5
variable    b equal 5.7e-10
variable    s equal 3.405e-10
variable    rho equal 4/$b^3*$s^3
variable    x equal 20
variable    y equal 20
variable    z equal 20
variable    N equal 1000

units       lj
dimension   3
boundary    p p p
atom_style  atomic

lattice         fcc ${rho}
region          simbox block 0 $x 0 $y 0 $z
create_box      2 simbox
create_atoms    1 box

mass        1 1.0
mass        2 1.0

velocity    all create ${T} 42 dist uniform

pair_style  lj/cut 3.0
pair_coeff  * * 1.0 1.0 3.0

fix             fixnvt all nvt temp ${T} ${T} $(1.0*dt)

# Thermalize
thermo_style    custom cpu
run             500
reset_timestep  0

label       tloop

variable    n loop 20

variable    r equal random(2,3,42)*1e-9/$s/xlat
variable    xp equal random(0,$x,42)
variable    yp equal random(0,$y,42)
variable    zp equal random(0,$z,42)

# Spherical pores
region      p${n} sphere ${xp} ${yp} ${zp} ${r}

next        n
jump        SELF tloop

# Equilibriate
thermo_style    custom cpu
run             500
reset_timestep  0

# Remove thermalization
unfix       fixnvt

region      pore union 20   p1 p2 p3 p4 p5 p6 p7 p8 p9 p10 p11 p12 &
                            p13 p14 p15 p16 p17 p18 p19 p20

# Delete half the atoms in the pore
delete_atoms    porosity pore 0.5 42

# Three groups: 1) cylinder 2) whole box 3) whole box - cylinder
group       pore_group region pore
group       gbox region simbox
group       outside_pore subtract gbox pore_group
set         group pore_group type 2

fix         fixSetForce outside_pore setforce 0.0 0.0 0.0
velocity    outside_pore set 0.0 0.0 0.0

fix         fixnve pore_group nve

compute     myMSD pore_group msd

thermo          10
thermo_style    custom step temp c_myMSD[4] time
run             $N
